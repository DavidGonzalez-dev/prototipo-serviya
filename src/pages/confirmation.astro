---
import Layout from "../layouts/Layout.astro"
import Check from "../assets/icons/check.astro"
---

<Layout>
    <main>
        <h1>Pago Realizado con Exito</h1>
        <Check/>
        <p>Tu helper te visitara en la fecha acordada</p>
        <a href="/">Volver al Incio</a>
    </main>
</Layout>

<style>
    main{
        height: 79.8vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 20px;
    }

    h1{
        color: var(--primary-yellow);
        font-family: "Pacifico", serif;
        font-weight: 500;
        font-size: 3rem;
    }

    a{
        color: white;
        text-decoration: none;
        padding: 7px 14px;
        background: var(--primary-yellow);
        font-weight: 700;
        border-radius: 10px;
    }


</style>