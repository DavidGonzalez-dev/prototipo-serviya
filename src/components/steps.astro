---
const {title, img, description} = Astro.props
---

<article>
    <img src={img} alt={description}>
    <h4>{title}</h4>
    <p>{description}</p>
</article>

<style>
    article {
        width: 20rem;
        text-align: center;
        padding: 20px;
        border-left: 1px solid #00000017;
        border-right: 1px solid #00000017;
        transition: .25s;
    }

    article:hover {
        transform: translate(0, -10px);
        background: #eee34b11;
    }

    img {
        height: 15rem;
        margin-bottom: 1rem;
    }
    h4 {
        margin-bottom: 1rem;
        font-size: 1rem;
        border: 1px solid var(--primary-yellow);
        width: fit-content;
        place-self: center;
        color: var(--primary-yellow);
        padding: 7px 14px;
        border-radius: 1rem;
        cursor: pointer;
        transition: .25s;
    }
    h4:hover {
        border: 1px solid transparent;
        color: white;
        background: var(--primary-yellow);
    }
</style>