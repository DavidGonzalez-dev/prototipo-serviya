---
import MenuIcon from "../assets/icons/menuIcon.astro"
import UserIcon from "../assets/icons/userIcon.astro"
---

<header>
    <nav>
        <div id="logo">
            <MenuIcon></MenuIcon>
            <img src="/src/images/logo-image.jpg" alt="Logo">
            <h2>SERVIYA</h2>
        </div>
        <UserIcon></UserIcon>
    </nav>
</header>

<style>
    header {
        height: 20%;
        width: 100%;
    }
    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0 7px;
        padding: 10px 20px;
        border: solid 1px #0001;
        box-shadow: 0 0 5px 5px #0001;
    }

    #logo {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0 5px
    }

    img {
        height: 3rem;
    }

    h2 {
        font-size: 2rem;
        font-family: "Pacifico", serif;
        color: var(--primary-yellow);
    }


</style>