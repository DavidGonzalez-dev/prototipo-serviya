---
import { Image } from "astro:assets";

const { img, title, description } = Astro.props;
---

<article>
    <img src={img} alt={title} />
    <div class="content">
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
</article>

<style>
    article {
        width: 25rem;
        border: 1px solid #00000023;
        border-radius: 1rem;
        box-shadow: 0 3px 10px 5px #adadad54;
        transition: .5s;
    }

    article:hover{
        transform: translate(0, -2px);
        box-shadow: 0 3px 10px 3px var(--primary-yellow);
    }

    img {
        height: 10rem;
        width: 100%;
        border-radius: 1rem;
        object-fit: cover;
    }

    .content {
        margin: 0 30px;
    }

    h3 {
        color: var(--primary-yellow);
        margin-bottom: 10px;
    }

    p {
        margin-bottom: 20px;
    }
</style>
